{
  "name": "notion-executive-assistant",
  "version": "1.0.0",
  "description": "Executive assistant powered by Clawdbot with Notion, Email, and Calendar integration",
  "type": "module",
  "scripts": {
    "onboard": "clawdbot onboard",
    "start": "clawdbot gateway --verbose",
    "start:daemon": "clawdbot gateway --daemon",
    "status": "clawdbot status",
    "test": "node --test skills/*/tests/*.test.js",
    "test:kalshi": "node --test skills/kalshi/tests/*.test.js",
    "test:notion": "node --test skills/notion/tests/*.test.js",
    "test:notion:smoke": "node scripts/test-notion.js",
    "test:email:smoke": "node scripts/test-email.js",
    "test:calendar:smoke": "node scripts/test-calendar.js"
  },
  "dependencies": {
    "@notionhq/client": "^5.8.0",
    "@octokit/rest": "^22.0.1",
    "google-auth-library": "^9.0.0",
    "googleapis": "^140.0.1",
    "nodemailer": "^6.9.14"
  },
  "optionalDependencies": {
    "clawdbot": "2026.1.24-3"
  },
  "devDependencies": {
    "dotenv": "^16.6.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "clawdbot",
    "notion",
    "executive-assistant",
    "telegram",
    "automation"
  ],
  "license": "MIT",
  "pnpm": {
    "onlyBuiltDependencies": [
      "clawdbot",
      "sharp",
      "protobufjs",
      "@whiskeysockets/baileys"
    ]
  }
}
